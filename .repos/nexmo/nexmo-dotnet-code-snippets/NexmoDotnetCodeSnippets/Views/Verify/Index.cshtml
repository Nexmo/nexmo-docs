<header>
    <h1>Code samples for using Nexmo Verify API</h1>
    <h3>Learn how to to start the verification process by sending a verification code to a user, then validate the code the user supplies and perform other operations</h3>
</header>

<div style="width:50%; padding-top:10px">
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Start verification process</span>
            </div>
            <div style="padding-top:10px">
                @using (Html.BeginForm("Start", "Verify", FormMethod.Post))
                {
                    <input type="text" name="to" id="to" placeholder="Phone number " style="height:30px" />
                    <input type="submit" value="Verify" style="height:30px" />
                }
            </div>
            <h4>@ViewBag.verificationResult</h4>
        </div>
    </div>
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Start verification process</span>
            </div>
            <div style="padding-top:10px">
                @using (Html.BeginForm("VerifyWithWorkflow", "Verify", FormMethod.Post))
                {
                    <input type="text" name="to" id="to" placeholder="Phone number " style="height:30px" />
                    <input type="text" name="workflow_id" id="workflow_id" placeholder="workflow_id" style="height:30px" />
                    <input type="submit" value="Verify" style="height:30px" />
                }
            </div>
            <h4>@ViewBag.VerificationId</h4>
        </div>
    </div>
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Check code</span>
            </div>
            <div style="padding-top:10px">
                @if (ViewBag.checkMessage != null)
                {
                    <h2>@ViewBag.checkMessage</h2>
                }
                else
                {
                    using (Html.BeginForm("Check", "Verify", FormMethod.Post))
                    {
                        <input type="text" name="code" id="code" placeholder="code" style="height:30px" />
                        <input type="text" name="id" id="id" placeholder="id" style="height:30px" />
                        <input type="submit" value="Check" style="height:30px" />
                    }
                }
            </div>
        </div>
    </div>
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Cancel Verification</span>
            </div>
            <div style="padding-top:10px">
                @using (Html.BeginForm("Cancel", "Verify", FormMethod.Post))
                {
                    <input type="text" name="requestID" id="requestID" placeholder="request ID" style="height:30px" />
                    <input type="submit" value="Cancel" style="height:30px" />
                }
                <h4>@ViewBag.cancelstatus</h4>
            </div>
        </div>
    </div>
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Search for verification</span>
            </div>
            <div style="padding-top:10px">
                @using (Html.BeginForm("Search", "Verify", FormMethod.Post))
                {
                    <input type="text" name="requestID" id="requestID" placeholder="request ID" style="height:30px" />
                    <input type="submit" value="Search" style="height:30px" />
                }
            </div>
            <h4>@ViewBag.status</h4>
            <h4>@ViewBag.error_text</h4>
        </div>
    </div>
    <div style="width:50%; padding-top:10px">
        <div class="content">
            <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
                <span style="vertical-align:central; text-align:center">Trigger next verification process</span>
            </div>
            <div style="padding-top:10px">
                @if (ViewBag.nextMessage != null)
                {
                    <h2>@ViewBag.nextMessage</h2>
                }
                else
                {
                    using (Html.BeginForm("TriggerNext", "Verify", FormMethod.Post))
                    {
                        <input type="text" name="requestID" id="requestID" placeholder="request ID" style="height:30px" />
                        <input type="submit" value="Trigger next" style="height:30px" />
                    }
                }
            </div>
        </div>
    </div>
</div>
