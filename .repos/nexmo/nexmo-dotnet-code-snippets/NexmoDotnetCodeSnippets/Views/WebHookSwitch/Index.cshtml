<header>
    <h1>Code samples for switching webhook "routes" on the fly</h1>
</header>

<div style="width:50%; padding-top:10px">
    <div class="content">
        <div class="title" style="height:20px; background-color:cornflowerblue; text-align:center">
            <span style="vertical-align:central; text-align:center">Create an application</span>
        </div>
        <div style="padding-top:10px">
            @using (Html.BeginForm("SwitchRoute", "WebhookSwitch", FormMethod.Post))
            {
                @Html.DropDownList("mode", new SelectList(Enum.GetValues(typeof(NexmoDotnetCodeSnippets.Modules.RoutingModule.RoutingMode))), "Select Route Type", new { @class = "form-control", @style = "height:30px" })
                <input type="submit" value="Switch" style="height:30px;" />
            }
            <h2>@ViewBag.route</h2>
        </div>
    </div>
</div>